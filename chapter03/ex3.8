#include <iostream>
#include <string>
using namespace std;
int main()
{
	string str("Mark Tuan");
	// use while
	decltype(str.size()) i = 0;
	while (i < str.size()) {
		str[i] = 'X';
		++i;
	}
	cout << str << endl;

	// use traditional for
	for (i = 0; i < str.size(); ++i) str[i] = 'Y';
	cout << str << endl;

	// I like the first one.
	return 0;
}
