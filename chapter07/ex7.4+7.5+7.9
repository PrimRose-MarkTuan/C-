#include <iostream>
#include <iostream>
#include <string>
using namespace std;

class Person
{
public:
	string name;
	string address;

	string getName() const
	{
		return name;
	}
	string getAddress() const
	{
		return address;
	}

};

istream& read(istream &is, Person &person)
{
	is >> person.name >> person.address;
	if (!is)
		person = Person();
	return is;
}

ostream& print(ostream &os, Person &person)
{
	os << person.name << " " << person.address << endl;
	return os;
}

